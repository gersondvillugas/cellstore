<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@drawable/gradient_background"
    tools:context=".activities.auth.Registro">

    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="match_parent"
        android:background="@drawable/background_white_border"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <EditText
            android:layout_width="240dp"
            android:layout_height="36dp"
            android:layout_marginTop="24dp"
            android:gravity="center_vertical"
            android:paddingLeft="12dp"
            android:textSize="12sp"
            android:hint="Nombre de Usuario"/>

        <EditText
            android:layout_width="240dp"
            android:layout_height="36dp"
            android:layout_marginTop="12dp"
            android:gravity="center_vertical"
            android:paddingLeft="12dp"
            android:textSize="12sp"
            android:hint="ContraseÃ±a" />

        <EditText
            android:layout_width="240dp"
            android:layout_height="36dp"
            android:layout_marginTop="12dp"
            android:gravity="center_vertical"
            android:paddingLeft="12dp"
            android:textSize="12sp"
            android:hint="Numero de tarjeta" />

        <LinearLayout
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:gravity="center_vertical"
                android:paddingLeft="12dp"
                android:paddingRight="6dp"
                android:textSize="12sp"
                android:hint="Fecha de Vencimiento" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:gravity="center_vertical"
                android:paddingLeft="6dp"
                android:textSize="12sp"
                android:hint="3 digitos"/>
        </LinearLayout>
        <EditText
            android:layout_width="240dp"
            android:layout_height="36dp"
            android:layout_marginTop="12dp"
            android:gravity="center_vertical"
            android:paddingLeft="12dp"
            android:textSize="12sp"
            android:hint="Numero de telefonico" />

        <EditText
            android:layout_width="240dp"
            android:layout_height="36dp"
            android:layout_marginTop="12dp"
            android:gravity="center_vertical"
            android:paddingLeft="12dp"
            android:textSize="12sp"
            android:hint="codigo postal" />

        <EditText
            android:layout_width="240dp"
            android:layout_height="36dp"
            android:layout_marginTop="12dp"
            android:gravity="center_vertical"
            android:paddingLeft="12dp"
            android:textSize="12sp"
            android:hint="Direccion de entrega" />
        <EditText
            android:layout_width="240dp"
            android:layout_height="36dp"
            android:layout_marginTop="12dp"
            android:gravity="center_vertical"
            android:paddingLeft="12dp"
            android:textSize="12sp"
            android:hint="Departamento" />
        <EditText
            android:layout_width="240dp"
            android:layout_height="36dp"
            android:layout_marginTop="12dp"
            android:gravity="center_vertical"
            android:paddingLeft="12dp"
            android:textSize="12sp"
            android:hint="Provincia" />
        <EditText
            android:layout_width="240dp"
            android:layout_height="36dp"
            android:layout_marginTop="12dp"
            android:gravity="center_vertical"
            android:paddingLeft="12dp"
            android:textSize="12sp"
            android:hint="Distrito" />
        <EditText
            android:layout_width="240dp"
            android:layout_height="36dp"
            android:layout_marginTop="12dp"
            android:gravity="center_vertical"
            android:paddingLeft="12dp"
            android:textSize="12sp"
            android:hint="Correo Electronico" />

        <LinearLayout
            android:layout_width="224dp"
            android:layout_height="20dp"
            android:layout_marginTop="30dp"
            android:gravity="center_vertical">

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Acepto todos los terminos y condiciones"
                android:textSize="9dp" />
        </LinearLayout>

        <Button
            android:layout_width="136dp"
            android:layout_height="48dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/corner_button"
            android:text="Registrarse"
            android:textAllCaps="false"
            android:textColor="#EEFFFFFF"
            android:textSize="12dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:textColor="#000000"
                android:text="Tienes cuenta?" />

            <TextView
                android:id="@+id/iniciar_sesion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#182776"
                android:layout_marginLeft="6dp"
                android:text="Iniciar Sesion" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>